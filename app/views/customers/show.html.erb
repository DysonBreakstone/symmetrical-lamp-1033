<h1><%= @customer.name %></h1>
<% @customer.items.each do |item| %>
<p><%= "#{item.name}: price: #{item.price} market: #{item.supermarket.name}" %></p>
<% end %>
<h2> Add item </h2>
<%= form_with url: "/customers/#{@customer.id}", method: :post, local: true do |form| %>
  <p><%= form.label :item_id, "Item id:" %>
  <%= form.number_field :item_id %></p>
  <%= form.submit "Add this item" %>
<% end %>